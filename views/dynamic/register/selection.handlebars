<div class="container">
    <div class="col-md-6 registration-box-border div-align-mid">
        <div class="row registration-margin">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <img class="bo-modal-logo" alt="BreakOut" src="/img/logos/BreakOut-Logo_Header.svg">
            </div>
        </div>
        <div class="row registration-margin">
            <div class="col-xs-12">
                <h2 id="test-headline" class="text-center">{{__ 'HEADLINE'}}</h2>
            </div>
        </div>
        {{#if error}}
            <div class="row">
                <div class="col-xs-12">
                    <div class="alert alert-danger">{{error}}</div>
                </div>
            </div>
        {{/if}}
        <div class="row">
            <div class="col-xs-12">

            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                {{#unless emailConfirmed }}
                    <p>{{__ 'DESCRIPTION_1'}}</p>
                {{/unless}}

                {{#if status.is.participant}}
                    <p>{{{__ 'DESCRIPTION_PARTICIPANT'}}}</p>
                {{else}}
                    {{#if status.is.sponsor}}
                        <p>{{{__ 'DESCRIPTION_SPONSOR'}}}</p>
                    {{else}}
                        <p>{{{__ 'DESCRIPTION_OBSERVER'}}}</p>
                        <p>{{__ 'DESCRIPTION_3'}}</p>
                    {{/if}}
                {{/if}}
            </div>
        </div>

        {{#unless status.is.participant}}
            <!--<div class="row">
                <div class="col-xs-12">
                    <a id="test-participant" href="/participant" class="no-underline">
                        <div class="bo-reg-well-selection bo-reg-well-selection-hover">
                            <h4><strong>{{__ 'PARTICIPANT_H'}}</strong></h4>
                            <p>{{__ 'PARTICIPANT'}}</p>
                        </div>
                    </a>
                </div>
            </div>-->
        {{/unless}}
        {{#if status.is.user}}
            <div class="row">
                <div class="col-xs-12">
                    <a href="/settings/profile" class="no-underline">
                        <div class="bo-reg-well-selection bo-reg-well-selection-hover">
                            <h4>{{__ 'PROFILE_H'}}</h4>
                            <p>{{__ 'PROFILE'}}</p>
                        </div>
                    </a>
                </div>
            </div>
        {{/if}}
        {{#ifOr status.is.team status.is.sponsor}}
            <div class="row">
                <div class="col-xs-12">
                    <a href="/settings/sponsoring" class="no-underline">
                        <div class="bo-reg-well-selection bo-reg-well-selection-hover">
                            <h4>{{__ 'SPONSORING_H'}}</h4>
                            <p>{{__ 'SPONSORING'}}</p>
                        </div>
                    </a>
                </div>
            </div>
        {{/ifOr}}
        {{#if status.is.participant}}
            {{#unless status.is.team}}
                <div class="row">
                    <div class="col-xs-12">
                        <a id="test-participant" href="/team-invite" class="no-underline">
                            <div class="bo-reg-well-selection bo-reg-well-selection-hover">
                                <h4><strong>{{__ 'NOTEAM_H'}}</strong></h4>
                                <p>{{__ 'NOTEAM'}}</p>
                            </div>
                        </a>
                    </div>
                </div>
            {{/unless}}
        {{/if}}
        {{#unless status.is.sponsor}}
            <div class="row">
                <div class="col-xs-12">
                    <a href="/sponsor" class="no-underline">
                        <div class="bo-reg-well-selection bo-reg-well-selection-hover">
                            <h4><strong>{{__ 'SPONSOR_H'}}</strong></h4>
                            <p>{{__ 'SPONSOR'}}</p>
                        </div>
                    </a>
                </div>
            </div>
        {{/unless}}
        {{#unless status.is.participant}}
            {{#unless status.is.sponsor}}
                <div class="row">
                    <div class="col-xs-12">
                        <h5><a id="test-spectator-success"
                               href="/spectator-success">{{__ 'OBSERVER'}}</a></h5>
                    </div>
                </div>
            {{/unless}}
        {{/unless}}
    </div>
</div>
