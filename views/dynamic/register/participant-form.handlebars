<div class="registration-body">
    <div class="container">
        <div class="col-md-3"></div>
        <div class="col-md-6 registration-box-border">
            <div class="row registration-margin">
                <div class="col-md-6">
                    <img class="bo-modal-logo" alt="BreakOut" src="/img/logos/BreakOut-Logo_Header.svg">
                </div>
                <div class="col-md-6">
                    <div class="media-middle registration-picture">
                        <i class="material-icons registration-picture-icon">camera_alt</i>
                    </div>

                </div>
            </div>
            <form id="registrationForm">
                <div class="registration-margin">
                    <div class="row">
                        <div class="col-md-6 col-md-push-6">
                            <label>Geschlecht</label>
                            <div class="col-xs-12">
                                <div class="text-center">
                                    <div class="btn-group">
                                        <button class="btn btn-default bo-reg-buttons" name="gender" value="male"
                                                id="male" type="button">Männlich
                                        </button>
                                        <button class="btn btn-default bo-reg-buttons" name="gender" value="female"
                                                id="female" type="button">Weiblich
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-md-pull-6">
                            <div class="form-group has-feedback has-feedback-left">
                                <div class="form-group has-feedback has-feedback-left">
                                    <label for="firstname">Vorname</label>
                                    <input type="text" class="form-control" name="firstname" id="firstname"
                                           placeholder="Maxi" required="required">
                                    <i class="form-control-feedback material-icons">perm_identity</i>

                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group has-feedback has-feedback-left">
                                <label for="lastname">Nachname</label>
                                <input type="text" class="form-control" id="lastname" name="lastname"
                                       placeholder="Muster" required="required">
                                <i class="form-control-feedback material-icons">perm_identity</i>

                            </div>
                        </div>
                        <!-- todo: change icon, style select-->
                        <div class="col-md-6 ">
                            <div class="form-group has-feedback-left has-feedback">
                                <label for="tshirtsize">T-Shirt Größe</label>
                                <select name="tshirtsize" id="tshirtsize" class="form-control">
                                    <option disabled selected>T-Shirt Größe</option>
                                    <option value="xs">XS</option>
                                    <option value="s">S</option>
                                    <option value="m">M</option>
                                    <option value="l">L</option>
                                    <option value="xl">XL</option>
                                    <option value="xxl">XXL</option>
                                </select>
                                <i class="material-icons form-control-feedback" required="required">contact_phone</i>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group has-feedback has-feedback-left">
                                <label for="phonenumber">Handynummer</label>
                                <input type="text" class="form-control" id="phonenumber" name="phonenumber"
                                       placeholder="+49 123 456789" required="required">
                                <i class="form-control-feedback material-icons">phone</i>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group has-feedback has-feedback-left">
                                <label for="emergencynumber">Notfallnummer</label>
                                <input type="text" class="form-control" id="emergencynumber" name="emergencynumber"
                                       placeholder="+49 123 456789" required="required">
                                <i class="form-control-feedback material-icons">contact_phone</i>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-12 registration-margin">
                        <input type="checkbox" id="terms_accepted" required="required" class="bo-reg-checkbox"/>
                        <label for="terms_accepted" class="bo-reg-label">Hiermit akzeptiere ich die <a>Allgemeinen
                            Geschäftsbedingungen.</a></label>
                    </div>

                    <div class="registration-margin">
                        <button type="submit" id="register" class="btn btn-primary btn-block">WEITER</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>