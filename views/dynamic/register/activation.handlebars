<div class="container">
    <div class="col-md-4 registration-box-border div-align-mid">
        <div class="row registration-margin">
            <div class="col-xs-10 div-align-mid">
                <img class="bo-modal-logo center" alt="BreakOut" src="/img/logos/BreakOut-Logo_Header.svg">
            </div>
        </div>
        {{#if error}}
            <div id="error">
                <div class="alert alert-danger">{{error}}</div>
            </div>
        {{else}}
            <div class="row registration-margin">
                <div class="col-xs-12">
                    <h3 class="text-center">{{__ 'HEADLINE'}}</h3>
                    <p>
                        {{__ 'DESCRIPTION'}}
                    </p>
                </div>
            </div>
        {{/if}}

        <div class="row registration-margin">
            <div class="col-xs-12">
                <a href="/login" class="no-underline">
                    <button class="btn btn-primary btn-block">{{__ 'CTA'}}</button>
                </a>
            </div>
        </div>
    </div>
</div>
