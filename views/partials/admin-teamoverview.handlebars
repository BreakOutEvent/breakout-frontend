<style>

  .lastComment{
    display: flex;
    font-size: 1em;
    max-width: 100px;
    overflow: scroll;
  }

  .inputfield{
    margin-top: 20px;
    margin-bottom: 20px;
  }

  .invisible{
    display:none;
  }
</style>

</head>

<div class="row">
    <div class="col-xs-12">
        <input type="search" class="form-control" placeholder="Suche...">
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Team-Name</th>
                <th>Mitglieder</th>
                <th>
                  Letzer Post
                  <form action="/admin/teamoverview" method="get">
                    <input class="invisible " name="sortBy" value="lastPosting">
                    <input class="invisible swap" name="direction" value="up">
                    <button type="submit" class="btn-link"><i class="material-icons">swap_vert</i></button>
                  </form>
                </th>
                <th>
                  <form action="/admin/teamoverview" method="get">
                    <input class="invisible" name="sortBy" value="lastLocation">
                    Letzer Ort
                    <input class="invisible swap" name="direction" value="up">
                    <button type="submit" class="btn-link"><i class="material-icons">swap_vert</i></button>
                  </form>
                </th>
                <th>
                  <form action="/admin/teamoverview" method="get">
                    <input class="invisible" name="sortBy" value="lastContactWithHeadquarters">
                    Letzter Kontakt mit HQ
                    <input class="invisible swap" name="direction" value="up">
                    <button type="submit" class="btn-link"><i class="material-icons">swap_vert</i></button>
                  </form>
                </th>
                <th>
                  <form action="/admin/teamoverview" method="get">
                    <input class="invisible" name="sortBy" value="lastContact">
                    Letzter Kontakt allgemein
                    <input class="invisible swap" name="direction" value="up">
                    <button type="submit" class="btn-link"><i class="material-icons">swap_vert</i></button>
                  </form>
                </th>
            </tr>
            </thead>
            <tbody id="list">
            {{#each this}}
                <tr>
                    <td>{{teamName}} {{teamId}}<br>{{event.name}}</td>
                    <td>
                        {{#each members}}
                            <b class="member">{{firstname}} {{lastname}}</b></br>
                            <div class="moreinfo">
                              ID: {{id}} <br>
                              Kontakt: {{contactPhone}}<br>
                              Notfall: {{emergencyPhone}}<br>
                            </div>
                            <br>
                        {{/each}}
                    </td>
                    <td>
                      {{beautifuldate lastPosting.timestamp}}
                    </td>
                    <td>
                        Maps: <a target="_blank" href="https://www.google.com/maps/place/{{lastLocation.coord.latitude}},{{lastLocation.coord.longitude}}">
                            {{#if lastLocation.locationData.LOCALITY}}
                                {{lastLocation.locationData.LOCALITY}}, {{lastLocation.locationData.POLITICAL}}
                            {{else}}
                                Link
                            </a><br/>
                            {{/if}}
                        Latitude: {{lastLocation.coord.latitude}}
                        Longitude: {{lastLocation.coord.longitude}}
                        Datum: {{ beautifuldate lastLocation.timestamp}}
                    </td>
                    <td>
                      {{beautifuldate lastContactWithHeadquarters.timestamp}}</br></br>
                      <p class="lastComment">
                      "{{lastContactWithHeadquarters.comment}}"
                      </p>
                      <form action="/admin/lastcontact" method="post">
                        <input name="teamid" class="invisible" value={{teamId}}>
                        <textarea class="inputfield" name="update"></textarea>
                        <button type="submit" class="btn btn-default">Submit</button>
                      </form>
                    </td>
                    <td>
                      <p> Zuletzt allgemein von denen geh√∂rt:</p><br>
                      {{beautifuldate lastContact.timestamp}}</br></br>
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
</div>
