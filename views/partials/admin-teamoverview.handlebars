<style>

  .lastComment{
    font-size: 1.4em;
  }

  .inputfield{
    margin-top: 20px;
    margin-bottom: 20px;
  }

  .invisible{
    display:none;
  }
</style>

</head>

<div class="row">
    <div class="col-xs-12">
        <input type="search" class="form-control" placeholder="Suche...">
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Team ID</th>
                <th>Team-Name</th>
                <th>Event</th>
                <th>Mitglieder</th>
                <th>
                  <form action="/admin/teamoverview" method="get">
                    <input class="invisible" name="sortBy" value="lastPosting">
                    <button type="submit" class="btn-link">Letzter Post</button>
                  </form>
                </th>
                <th>Letzter Ort</th>
                <th>
                  <form action="/admin/teamoverview" method="get">
                    <input class="invisible" name="sortBy" value="lastContactWithHeadquarters">
                    <button type="submit" class="btn-link">Letzter Kontakt mit HQ</button>
                  </form>
                </th>
            </tr>
            </thead>
            <tbody id="list">
            {{#each this}}
                <tr>
                    <td>{{teamId}}</td>
                    <td>{{teamName}}</td>
                    <td>{{event.name}}</td>
                    <td>
                        {{#each members}}
                            <b class="member">{{firstname}} {{lastname}}</b></br>
                            <div class="moreinfo">
                              ID: {{id}} <br>
                              Kontakt: {{contactPhone}}<br>
                              Notfall: {{emergencyPhone}}<br>
                            </div>
                            <br>
                        {{/each}}
                    </td>
                    <td>
                      {{beautifuldate lastPosting.timestamp}}
                    </td>
                    <td><a href="https://www.google.com/maps/place/{{lastLocation.coord.latitude}},{{lastLocation.coord.longitude}}">Map</a></td>
                    <td>
                      {{beautifuldate lastContactWithHeadquarters.timestamp}}</br></br>
                      <p class="lastComment">
                      "{{lastContactWithHeadquarters.comment}}"
                      </p>
                      <form action="/admin/lastcontact" method="post">
                        <input name="teamid" class="invisible" value={{id}}>
                        <textarea class="inputfield" name="update"></textarea>
                        <button type="submit" class="btn btn-default">Submit</button>
                      </form>
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
</div>
