<div class="bo-header-info"></div>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>{{__ 'PRESS_HEADING'}}</h1>
            <hr>
        </div>
    </div>
    <div class="row">
        <!-- Testimonials end up here -->
        <div class="col-md-8">
            {{#each testimonials}}
                <div class="row">
                    <div class="col-md-12">
                        <a class="bo-press-testimonial-text" href="{{this.link}}">&quot;{{this.headline}}&quot;</a><br/>
                        <span class="bo-press-testimonial-from">&mdash; {{this.from}}, {{this.date}}</span>
                        <hr>
                    </div>
                </div>
            {{/each}}
        </div>

        <!-- Sidebar -->
        <div class="col-md-4">

            <!--Press material-->
            <!--TODO: Chance link!!-->
            <img src="img/static/pressemitteilungen.svg"
                 class="img-circle img-responsive bo-press-material-img">
            <div class="row">
                <div class="col-md-10">
                    <!-- TODO: i18n!! -->
                    <h2>Pressematerialien</h2>
                </div>
            </div>

            {{#each pressMaterials}}
                <div class="row bo-press-material">
                    <div class="col-md-12">
                        <a href="{{this.link}}">{{this.text}}</a>
                    </div>
                </div>
            {{/each}}

            <!-- pressReviews-->
            <!--TODO: Chance link!!-->
            <img src="img/static/pressepaket.svg"
                 class="img-circle img-responsive bo-press-material-img">
            <div class="row">
                <div class="col-md-12">
                    <!-- TODO: i18n!! -->
                    <h2>Pressespiegel</h2>
                </div>
            </div>

            {{#each pressReviews}}
                <div class="row bo-press-material">
                    <div class="col-md-12">
                        <a href="{{this.link}}">{{this.text}}</a>
                    </div>
                </div>
            {{/each}}
            <br /><!-- TODO: Remove me! -->
            <!--press spokeswoman-->
            <div class="row">
                <div class="col-md-12">
                    <!--TODO: i18n-->
                    <h2>Kontakt</h2>
                    <p>
                        Bei Interviewanfragen oder falls sie zusätzliches Material benötigen,
                        melden Sie sich gerne bei
                        <a href="mailto:denise.ludwig@break-out.org">Denise Ludwig</a>
                    </p>
                </div>
            </div>

        </div>
    </div>
</div>
