<header class="img-bg-header" style="
    background: url({{page.headerImage.fields.file.url}});
    /* max-height: 300px; */
    height: 400px;
    padding-top: 0;
    margin-top: -70px;
    margin-bottom: -1px;
    background-position: center;
    background-size: cover;
    display: flex;
    align-items: center;
    justify-content: center">
    <h1 style="color: white;text-shadow: 2px 2px rgba(93, 93, 93, 0.74);">{{page.title}}</h1>
</header>

<div class="container top30">

    {{#each codeOfHonours}}
        <div class="row top30">

            <div class="col-md-4 hidden-sm hidden-xs">
                <img class="media-object media-middle" width="300px;"
                     src="{{this.image.fields.file.url}}"/>
            </div>

            <div class="col-md-8 top15">
                <h3>{{this.title}}</h3>
                <p>{{{md this.content}}}</p>
            </div>
        </div>
        <hr>
    {{/each}}

    <div class="row top30">
        <div class="col-md-12"></div>
    </div>

</div>