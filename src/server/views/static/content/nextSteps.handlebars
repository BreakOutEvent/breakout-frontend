<header class="img-bg-header" style="
    background: url(../img/header-faq.jpg);
    /* max-height: 300px; */
    height: 400px;
    padding-top: 0;
    margin-top: -70px;
    margin-bottom: -1px;
    background-position: center;
    background-size: cover;
    display: flex;
    align-items: center;
    justify-content: center">
    <h1 style="color: white;text-shadow: 2px 2px rgba(93, 93, 93, 0.74);">{{this.title}}</h1>
</header>

<div class="container-fluid">
    <div class="row" id="bo-explanation-image">
        <div class="container">
            <div class="col-sm-7">
                <img style="width: 100%;" src="{{this.explanationImage.fields.file.url}}"/>
            </div>

            <div class="visible-xs" style="height: 25px;">
            </div>
            <div class="col-md-4 col-md-offset-1 col-sm-5">
                <div class="visible-xs top30"></div>
                <h3>{{this.aspectsHeadline}}</h3>
                <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">

                    {{#each this.aspects}}
                        <div class="panel panel-default">
                            <div class="panel-heading" role="tab" id="heading-{{toId this.title}}">
                                <h4 class="panel-title">

                                    <a role="button"
                                       data-toggle="collapse"
                                       data-parent="#accordion"
                                       href="#{{toId this.title}}"
                                       aria-expanded="true"
                                       aria-controls="collapseOne"
                                       class="accordion-toggle">
                                        {{this.title}}
                                    </a>

                                </h4>
                            </div>
                            <div id="{{toId this.title}}"
                                {{#if @first}}class="panel-collapse collapse in"
                                 {{else}}class="panel-collapse collapse"{{/if}}
                                 role="tabpanel"
                                 aria-labelledby="{{toId this.title}}">
                                <div class="panel-body">
                                    {{{md this.description}}}
                                </div>
                            </div>
                        </div>
                    {{/each}}

                </div>
            </div>
        </div>
    </div>
</div>

<div id="next-steps-text" class="container">

    <div class="row top30">
        <div class="col-md-6">
            {{{md this.inform}}}
            <br>
            {{{md this.signUp}}}
            <br>
            {{{md this.prepare}}}
        </div>
        <div class="col-md-6">
            {{{md this.findSponsors}}}
        </div>
    </div>

    <hr>

    {{#if hasVideo }}
        <div class="row top15">
            <div class="col-md-12">
                <div class="video-container-16-to-9">
                    <iframe style="display: block; margin: 0 auto;"
                            src="https://www.youtube.com/embed/{{this.explanationVideo}}"
                            width="853"
                            height="480" frameborder="0" allowfullscreen="allowfullscreen"></iframe>
                </div>
            </div>
        </div>
        <hr>
    {{/if}}

    <div class="row top30">
        <div class="col-md-12">

        </div>
    </div>

    <div class="row top30">
        <div class="col-md-12">
            {{{md this.downloadApps}}}
        </div>

        <div class="col-sm-6" style="margin: 40px 0;">
            <div style="margin: 0 auto; text-align: center;"><a
                    href="https://geo.itunes.apple.com/de/app/breakout-how-far-can-you-go/id987528573?mt=8"
                    style="display:inline-block;overflow:hidden;background:url(https://linkmaker.itunes.apple.com/images/badges/en-us/badge_appstore-lrg.svg) no-repeat;width:330px;height:80px; background-size: 330px 80px;"></a>
            </div>
        </div>

        <div class="col-sm-6" style="margin: 20px 0;">
            <div style="margin: 0 auto; text-align: center;"><a
                    href="https://play.google.com/store/apps/details?id=org.break_out.breakout"
                    style="display:inline-block;overflow:hidden;background:url(https://play.google.com/intl/en_us/badges/images/generic/de_badge_web_generic.png) no-repeat;width:315px;height:120px; background-size: 315px 120px;"></a>
            </div>
        </div>

    </div>

</div>