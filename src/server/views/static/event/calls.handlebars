<header class="img-bg-header" style="
        height: 200px;
        padding-top: 0;
        margin-top: -70px;
        margin-bottom: -1px;
        background-position: center;
        background-size: cover;
        display: flex;
        align-items: center;
        justify-content: center">
    <h1 style="color: white;text-shadow: 2px 2px rgba(93, 93, 93, 0.74);">Call Log: <b>{{team.name}}</b></h1>
</header>

<div class="container-fluid">
    <div class="panel-body">
      <table class="table table-striped">
        <thead>
          <tr>
              <th style="width: 200px">Date</th>
              <th style="width: 150px">Reason</th>
              <th style="width: 200px">Comment</th>
              <th style="width: 200px">Admin</th>
          </tr>
        </thead>
        <tbody id="list">
          {{#each this.calls}}
            <tr>
                <td>
                  {{beautifuldate this.timestamp}}
                </td>
                <td>
                  {{getAtIndex callReasons this.reason}}
                </td>
                <td>
                  {{this.comment}}
                </td>
                <td>
                  {{this.admin.firstname}} {{this.admin.lastname}}
                </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
    <a href="/admin/event/teamoverview/">Back to Team Overview</a>
</div>
<script src="/js/admin.js" type="text/javascript" defer></script>
