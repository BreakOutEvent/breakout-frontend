<table class="table table-striped">
    <thead>
    <tr>
        <th>Team ID</th>
        <th>Invoice ID</th>
        <th>Teamname</th>
        <th>Event</th>
        <th>Mitglieder</th>
        <th>Offener Betrag</th>
        <th>Code</th>
        <th>Zahlungen eintragen</th>
    </tr>
    </thead>
    <tbody>
    {{#each this}}
        <tr>
            <td>{{teamId}}</td>
            <td>{{id}}</td>
            <td>{{teamName}}</td>
            <td>{{event.title}}</td>
            <td>
                {{#each members}}
                    {{firstname}} {{lastname}}{{#if @first}}<br/>{{/if}}
                {{/each}}
            </td>
            <td>{{open}} €</td>
            <td>{{purposeOfTransferCode}}</td>
            {{#if open}}
                <td>
                    FidorId: <input class="form-control fidor-id-input" type="number" id="fidor-id-{{id}}" />
                    <button class="btn btn-primary btn-payment" data-team="{{team}}" data-invoice="{{id}}"
                            data-amount="20">ADD 20€
                    </button>
                    <button class="btn btn-primary btn-payment" data-team="{{team}}" data-invoice="{{id}}"
                            data-amount="30">ADD 30€
                    </button>
                    <button class="btn btn-primary btn-payment" data-team="{{team}}" data-invoice="{{id}}"
                            data-amount="60">ADD 60€
                    </button>
                </td>
            {{else}}
                <td>
                    <span style="color: green;">✓ {{datesFidorIds}} </span>
                </td>
            {{/if}}

        </tr>
    {{/each}}
    </tbody>
</table>
