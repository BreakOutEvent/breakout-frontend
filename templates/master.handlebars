{{!--
{
  'title': 'Master template',
  'vars': {
    title: {
      title: 'Content title',
      type: 'text'
    },
    menu: {
      title: 'Menu item entries',
      child: {
        itemtext:{
          title: 'Menu item entry'
          type: 'url'
        },
        itemlink:{
          title: 'Menu item text',
          type: 'text'
        }
      }
    },
    sponsor: {
      title: 'Sponsor highlight text',
      type: 'text'
    },
    supporterlist: {
      title: 'List of supporters',
      child: {
        supporter:{
          title: 'Supporter entry'
          type: 'text'
        }
      }
    },
    friendslist: {
      title: 'List of BreakOut friends',
      child: {
        friend:{
          title: 'BreakOut Friend entry'
          type: 'text'
        }
      }
    },
    footermenu: {
      title: 'List of BreakOut friends',
      child: {
        menuitem:{
          title: 'BreakOut Friend entry'
          type: 'url'
        }
      }
    },
    copyright: {
      title: 'Copyright',
      type: 'text',
    }
  }
}
--}}


<!DOCTYPE html>
<html lang="de">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <meta name="description" content="">
    <meta name="author" content="">

    <title>{{title}}</title>
    
    <link href='http://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic,700italic' rel='stylesheet' type='text/css'>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!-- Bootstrap core CSS -->
    <link href="/css/styles.css" rel="stylesheet">
    <link rel="alternate" type="application/rss+xml" title="BreakOut &raquo; Feed" href="http://break-out.org/feed/" />
    <script type="text/javascript" src="/js/bundle.js"></script>
	</head>

  <body>

    <nav class="navbar navbar-inverse navbar-fixed-top bo-header">
      <div class="container">
<!-- non-collapsing items -->
<ul class="nav navbar-nav navbar-right bo-user-icons">
          <li><button type="button" class="btn navbar-btn hidden-sm hidden-xs" data-toggle="modal" data-target="#modalLogin">Anmelden / Registrieren</button></li>
          <li><a href="#"><i class="material-icons md-18">message</i></a></li>
          <li><a href="#"><i class="material-icons md-18">people</i></a></li>
          <li><a href="#"><i class="material-icons md-18">send</i></a></li>
          <li class="dropdown">
            <a id="userDropDown" class="dropdown-toggle" data-toggle="dropdown" href="#">
              <img src="http://lorempixel.com/30/30/people/1/" class="bo-nav-user-icon pull-left"></img><i class="material-icons">expand_more</i>
            </a>
            <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropDown">
              <li><a href="#">Account Einstellungen</a></li>
              <li><a href="#">Hilfe</a></li>
              <li role="separator" class="divider"></li>
              <li><a href="#">Zur BreakOut Webseite</a></li>
              <li><a href="#">Mobile App herunterladen</a></li>
              <li><a href="#">Weiter erz�hlen</a></li>
              <li role="separator" class="divider"></li>
              <li><a href="#">Abmelden</a></li>
            </ul>
          </li>
        </ul>
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">
            <img class="bo-nav-logo" alt="BreakOut" src="./img/logos/BreakOut-Logo_Nav.svg">
          </a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            {{#each menu}}
              <li><a href="{{itemlink}}">{{itemtext}}</a></li>
            {{/each}}
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>
    <div class="bo-header-logo">
      <img class="center-block" alt="BreakOut" src="./img/logos/BreakOut-Logo_Header.svg">
    </div>

{{{content}}}

    <div class ="bo-footer">
      <div class="container">
        <div class="row">
          <div class="col-md-4 col-xs-12">
            <h4>Sponsor von BreakOut</h4>
            <p>{{sponsor}}</p>
          </div>
          <div class="col-md-4 col-xs-6">
            <h4>Unterstützt von</h4>
            <ul>
              {{#each supporterlist}}
                <li>{{supporter}}</li>
              {{/each}}
            </ul>
          </div>
          <div class="col-md-4 col-xs-6">
            <h4>Unsere Freunde</h4>
            <ul>
              {{#each friendslist}}
                <li>{{friend}}</li>
              {{/each}}
            </ul>
          </div>
        </div>
        <hr>
        <div class="clearfix">
          <ul class="list-inline pull-left">
            {{#each footermenu}}
              <li><a href="#">{{menuentry}}</a></li>
            {{/each}}
          </ul>
          <p class="pull-right">{{copyright}}</p>
        </div>
      </div>
    </div>

  </body>
</html>